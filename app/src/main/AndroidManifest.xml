<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alteredworlds.taptap">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <!-- LOCATION permission group -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- BLUETOOTH permission group -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.alteredworlds.taptap.service.BleTapTapService">
            <intent-filter>
                <action android:name="com.alteredworlds.taptap.service.BleTapTapService" />
            </intent-filter>
        </service>

        <provider
            android:name="com.alteredworlds.taptap.data.TapTapContentProvider"
            android:authorities="com.alteredworlds.taptap.data"
            android:exported="false" />
    </application>

</manifest>
